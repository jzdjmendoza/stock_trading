<div class='overflow-x-auto'>
  <table class='table-auto'>
    <thead>
      <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Status</th>
        <th>Action</th>
        <th></th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <%= render user, is_show: false %>
    <% end %>
  </table>
</div>