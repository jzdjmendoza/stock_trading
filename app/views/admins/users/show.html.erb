<div>
  <%= link_to "Back", admin_users_path, class: 'font-medium text-blue-600 dark:text-blue-500 hover:underline' %>
</div><br/>

<table class='table-auto'>
  <thead>
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Status</th>
      <th>Action</th>
      <th></th>
    </tr>
  </thead>
  <%= render @user, is_show: true %>
</table>
<br/>

<h4>Transaction List: </h4>
<table class='table-fixed'>
  <thead>
    <tr>
      <th>Stock</th>
      <th>Type</th>
      <th>Quantity</th>
      <th>Unit Price (during Transaction)</th>
      <th>Total</th>
      <th>Transaction Date</th>
    </tr>
  </thead>
  <%- @transactions.each do |transaction| %>
    <%= render partial: 'transaction', locals: { transaction: transaction } %>
  <% end %>
</table>